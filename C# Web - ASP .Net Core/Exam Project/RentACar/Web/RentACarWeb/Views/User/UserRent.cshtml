@model List<RentACar.Web.ViewModels.Rent.RentViewModel>

@{
    ViewData["Title"] = "UserRent";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@if (Model.Count == 0)
{
    <h2 class="text-center text-primary">
        Нямате наеми.
    </h2>
    <hr class="hr-2 bg-primary">
}
else
{
    <div id="orders" class="text-primary">
        <div class="order-info row mt-4">
            <h3 class="col-md-1 text-left">#</h3>
            <h3 class="col-md-3 text-left">Марка</h3>
            <h3 class="col-md-3 text-left">Модел</h3>
            <h3 class="col-md-2 text-left">Цена за ден</h3>
            <h3 class="col-md-2 text-center">Начална дата</h3>
            <h3 class="col-md-2 text-center">Крайна дата</h3>
            <h3 class="col-md-2 text-center">Сума</h3>

        </div>
        <hr class="hr-2 bg-primary">
        @for (int i = 0; i < Model.Count; i++)
        {
            <div class="order row">
                <h5 class="col-md-1 text-left">@(i + 1)</h5>
                <div class="col-md-3">
                    <img class="img-thumbnail product-cart-image"
                         src="@Model[i].CarPicture" />
                </div>
                <h5 class="col-md-3 text-left">@Model[i].CarBrand</h5>
                <h5 class="col-md-2 text-left order-price">@Model[i].CarModel</h5>
                <h5 class="col-md-1 text-right order-quantity">x@(Model[i].PricePerDay)</h5>
                <h5 class="col-md-1 text-right order-quantity">x@(Model[i].StartDate)</h5>

                <h5 class="col-md-1 text-right order-quantity">x@(Model[i].EndDate)</h5>

                <h5 class="col-md-1 text-right order-quantity">x@(Model[i].Fee)</h5>
            </div>
        }
    </div>
    <hr class="hr-2 bg-primary">
   
}