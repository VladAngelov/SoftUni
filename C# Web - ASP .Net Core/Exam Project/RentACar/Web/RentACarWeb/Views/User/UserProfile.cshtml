@model RentACar.Web.ViewModels.User.Details.UserDetailsViewModel

@{
    ViewData["Title"] = "UserProfile";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>Профил</h1>

<body>
    <h1 class="text-center">Детайли на потребителя</h1>
    <hr class="hr-2 bg-panda">
    <div class="mx-auto">
        <hr class="hr-2 bg-panda">
        <div class="d-flex justify-content-between">
            <div>
                <dl class="row">
                    <div class="d-flex justify-content-between">
                        <h4>Пълно име:</h4>
                        <h5>@Model.FullName</h5>
                    </div>

                    <div class="d-flex justify-content-between">
                        <h4>Пълно име:</h4>
                        <h5>@Model.PhoneNumber</h5>
                    </div>
                    <div class="d-flex justify-content-between">
                        <h4>Пълно име:</h4>
                        <h5>@Model.Email</h5>
                    </div>

                    <div class="d-flex justify-content-between">
                        <h4>Статус на потребителя:</h4>
                        @if (Model.Rents.Count >= 3)
                        {
                            <h5>Премиум</h5>
                        }
                        else
                        {
                            <h5>Стандартен</h5>
                        }
                    </div>
                    <div class="d-flex justify-content-between">
                        <h4>Брой на наеми:</h4>
                        <h5>@Model.Rents.Count</h5>
                    </div>
                </dl>
            </div>
            <div>
                <a asp-action="Index">Назад</a>
            </div>
        </div>
    </div>
</body>
