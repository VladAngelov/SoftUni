<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Rent a Car</title>
    <link rel="stylesheet" href="~/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/jquery.datetimepicker.css" />
    <link rel="stylesheet" href="~/css/site.css" />
    <script src="~/js/jquery-3.4.1.min.js"></script>
    <script src="~/js/popper.min.js"></script>
    <script src="~/js/jquery.datetimepicker.full.min.js"></script>
</head>
<body>
    @if (this.User.Identity.IsAuthenticated && this.User.IsInRole("Admin"))
    {
    <header>
        <nav class="navbar navbar-expand-lg navbar-dark bg-dark">
            <a class="navbar-brand font-weight-bold h1" href="/">Коли под наем</a>
            <button class="navbar-toggler"
                    type="button"
                    data-toggle="collapse"
                    data-target="#navbarNav"
                    aria-controls="navbarNav"
                    aria-expanded="false"
                    aria-label="Toggle navigation">
                <span class="navbar-toggler-icon"></span>
            </button>
            <div class="collapse navbar-collapse d-flex justify-content-end" id="navbarNav">
                <ul class="navbar-nav">
                    <li class="nav-item active">
                        <a class="nav-link font-weight-bold" >@this.User.Identity.Name ( Admin )</a>
                    </li>
                    <li class="nav-item active">
                        <a class="nav-link font-weight-bold" href="/">Начало</a>
                    </li>
                    <li class="nav-item active">
                        <a class="nav-link font-weight-bold" href="/Administration/Rents">Всички наеми</a>
                    </li>
                    <li class="nav-item active">
                        <a class="nav-link font-weight-bold" href="/Administration/Car/Create">Създай кола</a>
                    </li>
                    <li class="nav-item active">
                        <a class="nav-link font-weight-bold" href="/Identity/Account/Logout">Изход</a>
                    </li>
                </ul>
            </div>
        </nav>
    </header>
    }
    else if (this.User.Identity.IsAuthenticated && this.User.IsInRole("User"))
    {

    <header>
        <nav class="navbar navbar-expand-lg navbar-dark bg-dark rounded">
            <a class="navbar-brand font-weight-bold h1" href="/">Коли под наем</a>
            <button class="navbar-toggler"
                    type="button"
                    data-toggle="collapse"
                    data-target="#navbarNav"
                    aria-controls="navbarNav"
                    aria-expanded="false"
                    aria-label="Toggle navigation">
                <span class="navbar-toggler-icon"></span>
            </button>
            <div class="collapse navbar-collapse d-flex justify-content-end" id="navbarNav">
                <ul class="navbar-nav">
                    <li class="nav-item active">
                        <a class="nav-link font-weight-bold" >@this.User.Identity.Name ( User )</a>
                    </li>
                    <li class="nav-item active">
                        <a class="nav-link font-weight-bold" href="/">Начало</a>
                    </li>
                    <li class="nav-item active">
                        <a class="nav-link font-weight-bold" href="/Home/About">Контакти</a>
                    </li>
                    <li class="nav-item active">
                        <a class="nav-link font-weight-bold" href="/Identity/Account/Logout">Изход</a>
                    </li>
                </ul>
            </div>
        </nav>
    </header>
    }
    else
    {
    <header>
        <nav class="navbar navbar-expand-lg navbar-dark bg-dark">
            <a class="navbar-brand font-weight-bold" href="/">Коли под наем</a>
            <button class="navbar-toggler"
                    type="button"
                    data-toggle="collapse"
                    data-target="#navbarNav"
                    aria-controls="navbarNav"
                    aria-expanded="false"
                    aria-label="Toggle navigation">
                <span class="navbar-toggler-icon"></span>
            </button>
            <div class="collapse navbar-collapse d-flex justify-content-end" id="navbarNav">
                <ul class="navbar-nav">
                    <li class="nav-item active">
                        <a class="nav-link font-weight-bold" href="/">Начало</a>
                    </li>
                    <li class="nav-item active">
                        <a class="nav-link font-weight-bold" href="/Identity/Account/Login">Вход</a>
                    </li>
                    <li class="nav-item active">
                        <a class="nav-link font-weight-bold" href="/Identity/Account/Register">Регистрация</a>
                    <li class="nav-item active">
                        <a class="nav-link font-weight-bold" href="/Home/About">Контакти</a>
                    </li>
                </ul>
            </div>
        </nav>
    </header>
    }

    <div class="container">
        <partial name="_CookieConsentPartial" />
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <footer class="footer text-muted border-t">
        <div class="container d-flex justify-content-center">

            &copy; 2019 - Коли под наем - Владимир Ангелов -  Фк № 18250141005
        </div>
    </footer>

    <script src="~/lib/jquery/dist/jquery.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>

    @RenderSection("Scripts", required: false)
</body>
</html>